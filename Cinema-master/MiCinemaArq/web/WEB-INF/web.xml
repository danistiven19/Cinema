<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>FuncionServlet</servlet-name>
        <servlet-class>co.com.edu.udea.micine.controller.FuncionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FacturaServlet</servlet-name>
        <servlet-class>co.com.edu.udea.micine.controller.FacturaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PreFacturaServlet</servlet-name>
        <servlet-class>co.com.edu.udea.micine.controller.PreFacturaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AsientoServlet</servlet-name>
        <servlet-class>co.com.edu.udea.micine.controller.AsientoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AnadirAsientoServlet</servlet-name>
        <servlet-class>co.com.edu.udea.micine.controller.AnadirAsientoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SeleccionarFuncionServlet</servlet-name>
        <servlet-class>co.com.edu.udea.micine.controller.SeleccionarFuncionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NuevaBoletaServlet</servlet-name>
        <servlet-class>co.com.edu.udea.micine.controller.NuevaBoletaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FuncionServlet</servlet-name>
        <url-pattern>/FuncionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FacturaServlet</servlet-name>
        <url-pattern>/FacturaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PreFacturaServlet</servlet-name>
        <url-pattern>/PreFacturaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AsientoServlet</servlet-name>
        <url-pattern>/AsientoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AnadirAsientoServlet</servlet-name>
        <url-pattern>/AnadirAsientoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SeleccionarFuncionServlet</servlet-name>
        <url-pattern>/SeleccionarFuncionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NuevaBoletaServlet</servlet-name>
        <url-pattern>/NuevaBoletaServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
